jQuery(document).ready(function(){var commentsDiv=jQuery('.comment-list');if(commentsDiv.length){jQuery(commentsDiv).hide();jQuery('<button/>').attr('class','toggle-comments').attr('href','#').html('<i class="fa fa-comments">Klik Lihat Komentar</i>').insertBefore(commentsDiv);jQuery('.toggle-comments').on('click',function(e){e.preventDefault();jQuery(commentsDiv).toggle('slow',function(){var anchor=jQuery('.toggle-comments');var anchorText=anchor.html()=='<i class="fa fa-comments">Klik Tutup Komentar</i>'?'<i class="fa fa-comments">Klik Lihat Komentar</i>':'<i class="fa fa-comments">Klik Tutup Komentar</i>';jQuery(anchor).html(anchorText);});});}});
